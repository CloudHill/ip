<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<fx:root type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" >
  <padding>
    <Insets topRightBottomLeft="5" />
  </padding>
  <Label fx:id="id">
    <padding>
      <Insets right="5" />
    </padding>
  </Label> 
  <VBox alignment="CENTER_LEFT" GridPane.columnIndex="0">
    <Label fx:id="title" text="\$title" />
    <Label fx:id="description" text="\$description" />
  </VBox>
</fx:root>